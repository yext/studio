{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "client",
    "server",
    "vite.config.ts"
  ]
}